@model Employee_Management.Models.BankDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Bank Detail</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Edit Bank Detail</h5>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BankDetailId" />

                    <div class="row mb-3">
                        <label asp-for="AccountHolderName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="AccountHolderName" class="form-control" />
                            <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="AccountNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="AccountNumber" class="form-control" />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="IFSCCode" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="IFSCCode" class="form-control" />
                            <span asp-validation-for="IFSCCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="BankName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="BankName" class="form-control" />
                            <span asp-validation-for="BankName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Branch" class="form-control" />
                            <span asp-validation-for="Branch" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="EmployeeId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="EmployeeId" class="form-control" />
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}