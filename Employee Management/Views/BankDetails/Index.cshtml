@model IEnumerable<Employee_Management.Models.BankDetail>

@{
    ViewData["Title"] = "Bank Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bank Details</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table datatable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AccountHolderName)</th>
            <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
            <th>@Html.DisplayNameFor(model => model.IFSCCode)</th>
            <th>@Html.DisplayNameFor(model => model.BankName)</th>
            <th>@Html.DisplayNameFor(model => model.Branch)</th>
            <th>Employee Name</th> <!-- 🛠 Changed from EmployeeId to Employee Name -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AccountHolderName)</td>
                <td>@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.IFSCCode)</td>
                <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                <td>@item.Employee?.Name</td> <!-- 🛠 Corrected to show Employee Name safely -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BankDetailId" >Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BankDetailId" >Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BankDetailId" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Initialize DataTables -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.datatable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
            });
        });
    </script>
}
