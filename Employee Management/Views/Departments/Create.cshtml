@model Employee_Management.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-12"> @* Full width card *@
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create Department</h5> @* Card title *@

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="DepartmentName" class="col-sm-2 col-form-label">Department Name</label>
                        <div class="col-sm-10">
                            <input asp-for="DepartmentName" class="form-control" />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Designation" class="col-sm-2 col-form-label">Designation</label>
                        <div class="col-sm-10">
                            <input asp-for="Designation" class="form-control" />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" value="Create" class="btn btn-primary">Create</button>
                        <button type="reset" class="btn btn-secondary">Reset</button> @* Reset Button added *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

