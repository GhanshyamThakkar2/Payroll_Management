@model Employee_Management.Models.Payslip

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Basic Styling */
    body {
        font-family: sans-serif;
    }

    h1 {
        color: #333;
    }

    h4 {
        margin-bottom: 20px;
    }

    .dl-horizontal {
        margin-bottom: 20px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        white-space: nowrap; /* Prevent labels from wrapping */
    }

    .dl-horizontal dd {
        margin-left: 160px; /* Adjust as needed to align with labels */
    }

    /* Table-like appearance (alternative to dd margin) */
    .dl-table {
        display: table;
        width: 100%;
    }

    .dl-table .row {
        display: table-row;
    }

    .dl-table dt,
    .dl-table dd {
        display: table-cell;
        padding: 8px;
        vertical-align: top; /* Align content to the top */
        border-bottom: 1px solid #eee; /* Optional border */
    }

    .dl-table dt {
        width: 200px; /* Adjust label width */
    }

    /* Links */
    a {
        color: #007bff; /* Bootstrap primary color */
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Edit and Back to List buttons */
    .btn {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: normal;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-default {
        color: #333;
        background-color: #fff;
        border-color: #ccc;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Payslip</h4>
    <hr />
    <dl class="dl-table"> @* Or dl-horizontal if you prefer *@
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.Employee)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.EmployeeId)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.Year)</dt>
            <dd>@Html.DisplayFor(model => model.Year)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.Month)</dt>
            <dd>@Html.DisplayFor(model => model.Month)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.PayslipDate)</dt>
            <dd>@Html.DisplayFor(model => model.PayslipDate)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.BasicSalary)</dt>
            <dd>@Html.DisplayFor(model => model.BasicSalary)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.TotalAllowances)</dt>
            <dd>@Html.DisplayFor(model => model.TotalAllowances)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.TotalDeductions)</dt>
            <dd>@Html.DisplayFor(model => model.TotalDeductions)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.NetSalary)</dt>
            <dd>@Html.DisplayFor(model => model.NetSalary)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
            <dd>@Html.DisplayFor(model => model.PaymentMethod)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.Status)</dt>
            <dd>@Html.DisplayFor(model => model.Status)</dd>
        </div>
        <div class="row">
            <dt>@Html.DisplayNameFor(model => model.Comments)</dt>
            <dd>@Html.DisplayFor(model => model.Comments)</dd>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PayslipId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>