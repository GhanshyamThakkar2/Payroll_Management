@model Employee_Management.Models.Payslip

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Payslip</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Edit Payslip</h5>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PayslipId" />

                    <div class="row mb-3">
                        <label asp-for="EmployeeId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Month" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Month" class="form-control" />
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="PayslipDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PayslipDate" class="form-control" type="date" />
                            <span asp-validation-for="PayslipDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="BasicSalary" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="BasicSalary" class="form-control" />
                            <span asp-validation-for="BasicSalary" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="TotalAllowances" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="TotalAllowances" class="form-control" />
                            <span asp-validation-for="TotalAllowances" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="TotalDeductions" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="TotalDeductions" class="form-control" />
                            <span asp-validation-for="TotalDeductions" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="NetSalary" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="NetSalary" class="form-control" />
                            <span asp-validation-for="NetSalary" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Comments" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Comments" class="form-control" />
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}